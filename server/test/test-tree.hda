    is_allow=1 \
    entities=cat('["nof",1,',obj_id(/test/tree/set:tree-os_instance-editors),]) \
    op=ALL \
    xpath=/contents//os_instance \
    agroup=obj_id(/test/tree/agroup_authz_inst:tree-os_instance-editors)

set -e

# I copied this from http://askubuntu.com/questions/260978/add-custom-steps-to-source-packages-debian-package-postinst

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

conditional_statoverride_add () \{
    # $1 = user, $2 = group, $3 = mode, $4 = file
    if ! dpkg-statoverride --list $4 > /dev/null; then
        dpkg-statoverride --update --add $@
    fi
\}

case "$1" in

    configure)
        # Generate default CA and key if they don't exist.
        if [ ! -s {$default_ca_key} ] ; then
            openssl genpkey -out {$default_ca_key} -algorithm RSA -pkeyopt rsa_keygen_bits:4096
        fi
        if [ ! -s {$default_ca_dir}/{$default_ca_cert} ] ; then
            openssl req -new -x509 -days 3650 -key {$default_ca_key} -out {$default_ca_dir}/{$default_ca_cert} -subj "/DC=com/DC=example/OU=Machination/CN=machination-server"
        fi
        # Get our ca into /etc/ca-certificates.conf.
        # Look for our cert name with or without a "!" at the beginning.
        if ! grep -E '^\!\{0,1\}{$default_ca_dir}/{$default_ca_cert}$' /etc/ca-certificates.conf > /dev/null ; then
            # We didn't find our cert name, add it
            echo {$default_ca_dir}/{$default_ca_cert} >> /etc/ca-certificates.conf
        fi

        # Change ownership of some files.
        {join("\n        ",@chown_lines)}
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        # We don't need to handle these.
        exit 0
    ;;

    *)
        # Something went wrong.
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;

esac

